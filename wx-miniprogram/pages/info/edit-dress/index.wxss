/* pages/info/edit-dance/index.wxss */
.form input{
    text-align: right;
}
.intro{
    background-color: var(--white);
    padding: 1rpx 30rpx;
    min-height: 100rpx;
    border-top: 1rpx solid #eee;
}
.main-title textarea{
    font-size: 40rpx;
    height: 3.5em;
    line-height: 1.2;
}

.intro .title{
    padding: 20rpx 0;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.intro textarea{
    width: 100%;
    padding: 30rpx 0 0;
}

.nums {
    text-align: right;
    display: block;
}
.btns-wrapper{
    position: relative;
    width: 100%;
    text-align: center;
    margin: 40rpx 0;
}
.btns-wrapper .cu-btn{
    padding: 0 80rpx;
}

.price .picker::after {
	font-family: "cuIcon";
	display: block;
	content: "\e6a3";
	position: absolute;
	font-size: 34rpx;
	color: var(--grey);
	line-height: 100rpx;
	width: 60rpx;
	text-align: center;
	top: 0;
	bottom: 0;
	right: -20rpx;
	margin: auto;
}